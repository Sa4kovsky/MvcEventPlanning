                @Html.EditorFor(model => model.DataTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
